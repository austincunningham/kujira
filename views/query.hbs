{{> mainmenu }}

<h1>Query Kujira</h1>
<section class="four wide column">
    <h3 class="ui dividing header">Select Jira Field</h3>
    <div class="ui rasied form segment user">
        <div class="two fields">
            <aside class="six wide column">
                <img src="images/kujira.png" class="ui small image">
            </aside>
            <form action="/query" method="POST">
                <div class="field">
                    <div class="column">
                        <div class="ui selection dropdown" id="field">
                            <input name="field" type="hidden">
                            <div class="default text">Select Field</div>
                            <i class="dropdown icon"></i>
                            <div class="menu" >
                                {{#each fields}}
                                    <div class="item field" data-value={{id}}>{{name}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="column">
                        <div class="ui right icon input field">
                            <input placeholder="Field Value" type="text" name="value" id="value" class="search-input">
                            <i class="search icon"></i>
                        </div>
                    </div>
                    <br>
                    <button class="ui blue submit button">Build Query<i class="search icon"></i></button>


                </form>
                <form action="/allQuery" method="POST">
                <div>
                    <br>
                    <button class="ui blue submit button">Find All Project Data <i class="world icon"></i></button>
                </div>
            </form>
            </div>
        </div>
        </div>
    </section>
    <div class="ui raised segment">
        <form action="/clearQuery" method="POST">
             <h4>{{search}}
                <button class="ui blue submit button">Clear Query<i class="delete icon"></i></button>
             </h4>
        </form>
    </div>
    <div class="ui raised segment">
        <div class="ui styled accordion">
            <div class="title">
                <i class="dropdown icon"></i>
                Results
            </div>
            <div class="content">
                <p class="transition hidden">
                <div class="ui styled accordion">
                    {{#each fields}}
                    <div class="title">
                        <i class="dropdown icon"></i>
                        {{name}}
                    </div>
                    <div class="content">
                        <p class="transition hidden">
                                {{#each ../message}}
                                        <button class="mini ui blue button"><i class="key icon"></i> {{key}} </button>
                                        <button class="mini ui blue basic button">{{lookup this ../name}}</button><br>
                                {{/each}}
                        </p>
                    </div>
                    {{/each}}
                </div>
                </p>
            </div>
        </div>
    </div>
</section>